<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF495"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/kebab2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Nombre del jugador"
        app:layout_constraintBottom_toBottomOf="@+id/avatarImageView"
        app:layout_constraintStart_toEndOf="@+id/avatarImageView"
        app:layout_constraintTop_toTopOf="@+id/avatarImageView"
        app:layout_constraintVertical_bias="0.615" />

    <TextView
        android:id="@+id/mainMenuTextView"
        android:layout_width="170dp"
        android:layout_height="46dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="208dp"
        android:text="Menu Principal"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="147dp"
        android:layout_height="94dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Iniciar Partida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Button in a CardView -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="204dp"
        android:layout_height="30dp"
        android:layout_marginTop="172dp"
        android:text="Kebab Simulator"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/shopButton"
        android:layout_width="208dp"
        android:layout_height="62dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/square_button_background"
        android:drawableStart="@drawable/shop"
        android:drawablePadding="10dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="Tienda"
        android:textColor="@android:color/white"
        app:icon="@drawable/shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="194dp"
        android:layout_height="58dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="392dp"
        android:background="@drawable/square_button_background"
        android:drawableStart="@drawable/myprofile"
        android:drawablePadding="10dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="Mi perfil"
        android:textColor="@android:color/white"
        app:icon="@drawable/myprofile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/enemiesButton"
        android:layout_width="199dp"
        android:layout_height="54dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="316dp"
        android:background="@drawable/square_button_background"
        android:drawableStart="@drawable/enemy"
        android:drawablePadding="10dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="Enemigos"
        android:textColor="@android:color/white"
        app:icon="@drawable/enemy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
